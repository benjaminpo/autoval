{
  "name": "autoval",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "if [ \"$SKIP_TESTS\" = \"true\" ]; then echo 'Tests skipped in production build'; else npx jest || echo 'Jest not available, skipping tests'; fi",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false",
    "test:backend": "cd backend && python -m pytest",
    "test:backend:verbose": "cd backend && python -m pytest -v",
    "test:backend:coverage": "cd backend && python -m pytest --cov=app --cov-report=html",
    "test:backend:ci": "cd backend && python -m pytest -v --cov=app --cov-report=xml",
    "test:all": "npm run test:ci && npm run test:backend:ci",
    "test:integration": "cd backend && python -m pytest test_integration.py -v",
    "backend": "cd backend && python app.py",
    "backend:dev": "cd backend && FLASK_ENV=development python app.py",
    "dev:full": "concurrently \"npm run backend:dev\" \"npm run dev\"",
    "docker:build": "docker build -t autoval:latest .",
    "docker:run": "docker-compose up",
    "docker:test": "docker-compose run test",
    "ci:test": "python run_tests.py",
    "type-check": "tsc --noEmit",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "dependencies": {
    "axios": "^1.6.0",
    "framer-motion": "^12.23.6",
    "lucide-react": "^0.292.0",
    "next": "14.2.30",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.8.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.0.0"
  }
}
